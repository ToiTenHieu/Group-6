<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.managerstudent.Controller.LoginController">
    <children>
        <TextField fx:id="usernameField" layoutX="200.0" layoutY="100.0" promptText="Username" />
        <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="150.0" promptText="Password" />
        <Button layoutX="250.0" layoutY="200.0" mnemonicParsing="false" text="Đăng nhập" onAction="#handleLogin" />
    </children>
</AnchorPane>
